<%= form_for(Group.new, :html => { :class => 'form-horizontal' }) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => 'form-control' %>
  </div>
  <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, :class => 'form-control' %>
  </div>
  <div class="form-group">
      <%= f.submit :name, :class => 'btn btn-success' %>
  </div>
<% end %>
