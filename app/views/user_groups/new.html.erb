<p class="error"><%= flash[:error] %></p>
<%= form_for(UserGroup.new, :html => { :class => 'form-horizontal' }) do |f| %>
  <div class="form-group">
      <%= f.label_tag 'name' %>
      <%= f.text_field_tag 'name', '', :class => 'form-control' %>
  </div>
  <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field_tag :password, '', :class => 'form-control' %>
  </div>
  <div class="form-group">
      <%= f.submit :name, :class => 'btn btn-success' %>

  </div>
<% end %>